
{
  "name": "power-redact-plugin",
  "version": "2.0.0",
  "description": "Advanced text redaction plugin with enhanced UX features, mobile optimization, and iOS integration",
  "main": "main-source.js",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:watch": "node esbuild.config.mjs --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint main-source.js",
    "lint:fix": "eslint main-source.js --fix",
    "dev": "concurrently \"npm run build:watch\" \"npm run test:watch\"",
    "prepare": "npm run build",
    "validate": "npm run lint && npm run test"
  },
  "keywords": [
    "redaction",
    "privacy",
    "text-processing",
    "mobile-optimized",
    "touch-support",
    "ios-integration",
    "pii-protection",
    "cursor-based-reveal",
    "advanced-ux"
  ],
  "author": "Power Components Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/memorymusicllc/power.components.git",
    "directory": "power-redact"
  },
  "bugs": {
    "url": "https://github.com/memorymusicllc/power.components/issues"
  },
  "homepage": "https://github.com/memorymusicllc/power.components/tree/main/power-redact#readme",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.50.0",
    "concurrently": "^8.2.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/core": "^7.22.0",
    "babel-jest": "^29.7.0"
  },
  "dependencies": {},
  "peerDependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "Chrome >= 80",
    "Firefox >= 75",
    "Safari >= 13",
    "Edge >= 80",
    "iOS >= 13",
    "Android >= 8"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "main-source.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "files": [
    "main-source.js",
    "styles.css",
    "manifest.json",
    "README.md",
    "IMPLEMENTATION_SUMMARY.md"
  ]
}
